@{
    ViewData["Title"] = "Contact Us";
}


<section>
    <div class="container my-5 py-5">
        <!-- <div class="container-fluid shadow p-3 mb-5 bg-white rounded "> -->
        <div class="row">
            <div class="col-md-6">
                <h1 class="text-dark text-center fw-bold mx-md-4 mt-4"></h1>
                <img src="~/im/20943953.jpg"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-6">
                <!--Section heading-->
                <h2 class="fw-bold text-center my-4">Contact Us</h2>
                <!--Section description-->
                <p class="text-center mx-auto mb-5">
                    Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
                    a matter of hours to help you.
                </p>

                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12 mb-md-0 mb-5 py-2 px-5">

                        <form id="contact-form" name="contact-form" action="#" method="POST">

                            <!--Grid row-->
                            <div class="row">

                                <!--Grid column-->
                                <div class="col-md-6">
                                    <div class="md-form mb-0">
                                        <input type="text" id="name" name="name" class="form-control" placeholder="Write your name...">
                                        <label for="name" class="mb-4">Your name</label>
                                    </div>
                                </div>
                                <!--Grid column-->
                                <!--Grid column-->
                                <div class="col-md-6">
                                    <div class="md-form mb-0">
                                        <input type="text" id="email" name="email" class="form-control" placeholder="Write your email...">
                                        <label for="email" class="mb-4">Your email</label>
                                    </div>
                                </div>
                                <!--Grid column-->

                            </div>
                            <!--Grid row-->
                            <!--Grid row-->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="md-form mb-0">
                                        <input type="text" id="subject" name="subject" class="form-control" placeholder="Which topic?">
                                        <label for="subject" class="mb-4">Subject</label>
                                    </div>
                                </div>
                            </div>
                            <!--Grid row-->
                            <!--Grid row-->
                            <div class="row">

                                <!--Grid column-->
                                <div class="col-md-12">

                                    <div class="md-form">
                                        <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea" placeholder="Write about the problem..."></textarea>
                                        <label for="message" class="mb-4">Your message</label>
                                    </div>

                                </div>
                            </div>
                            <!--Grid row-->

                        </form>

                        <div class="text-center text-md-left">
                            <button class="btn btn-danger rounded-pill px-5 shadow">SEND</button>
                        </div>
                        <div class="status"></div>
                    </div>
                    <!--Grid column-->

                </div>
            </div>

        </div>
        <div class="text-center mt-5">
            <ul class="row list-unstyled mb-0">
                <li class="col-md-4">
                    <i class="fas fa-map-marker-alt mt-4 fa-2x text-primary"></i>
                    <p>Daffodil Smart City, Ashulia</p>
                </li>

                <li class="col-md-4">
                    <i class="fas fa-phone mt-4 fa-2x text-primary"></i>
                    <p>+880 1833-102806</p>
                </li>

                <li class="col-md-4">
                    <i class="fas fa-envelope mt-4 fa-2x text-primary"></i>
                    <p>mansurulhakim@gmail.com</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->
    </div>
</section>
