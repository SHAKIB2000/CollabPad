@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="container-fluid">
    <div class="container my-5 py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 order-lg-1 order-2">
                <div class="row justify-content-center">
                    <div class="col-sm-8 col-md-10 col-xxl-6">
                        <a class="nav-link fw-bold fs-2 text-dark text-center" asp-area="" asp-controller="Home" asp-action="Index">
                            Collab<span class="text-danger">Pad</span>
                        </a>
                    </div>
                    <div class="card border-0 shadow-sm p-3 mb-5 bg-white rounded">
                        <div class="card-header bg-white">
                            <h3>Forgot Password?</h3>
                        </div>
                        <div class="card-body">
                            <p>
                                Enter the email address you used when you joined and we’ll send you
                                instructions to reset your password.
                            </p>
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-group">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                 <div>
                                    <button type="submit" class="btn btn-danger px-md-2 py-2 mt-3">
                                    Send Reset Instructions
                                </button>
                               </div>
                            </form>
                            
                        </div><!-- End: .card-body -->
                    </div>
                </div>
            </div><!-- End: .col-xl-8  -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
